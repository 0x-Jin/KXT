<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cn.hotdoor.kxt.Activities.InfoActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info_rl_head">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_left_purple_800_36dp"
            android:id="@+id/info_iv_return"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_below="@id/info_rl_head"
        android:id="@+id/info_v_v1"
        android:layout_marginTop="16dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_v_v1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/info_rl_account">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_account_circle_light_green_600_36dp"
            android:id="@+id/info_iv_account"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13726123456"
            android:id="@+id/info_tv_phone"
            android:layout_toRightOf="@+id/info_iv_account"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_below="@id/info_rl_account"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_rl_account"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/info_rl_comment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_info_outline_pink_300_36dp"
            android:id="@+id/info_iv_info"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:layout_toRightOf="@+id/info_iv_info"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_below="@id/info_rl_comment"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <com.dd.CircularProgressButton
        android:id="@+id/info_btn_logout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        app:cpb_selectorIdle="@drawable/logout_button_state_selector"
        android:textSize="18sp"
        app:cpb_textIdle="退出当前账号"
        app:cpb_textError="退出当前帐号"
        android:layout_alignParentBottom="true"
        app:cpb_cornerRadius="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:cpb_colorProgress="#00ffffff"
        app:cpb_colorIndicator="#fd4444" />
</RelativeLayout>
